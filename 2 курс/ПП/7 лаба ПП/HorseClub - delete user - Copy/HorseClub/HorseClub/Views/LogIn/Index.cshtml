@{
    ViewData["Title"] = "КЛС - Вход в личный кабинет";
}

<script>
    @if (TempData.ContainsKey("ErrorMessage"))
    {
        var errorMessage = TempData["ErrorMessage"];
        <text>
            window.onload = function() {
                alert('@errorMessage');
            };
        </text>
    }
</script>

<button onclick="location.href='@Url.Action("Index","Home")'" class="home-cta-btn button Anchor">На главную</button>
<center>

<center>
    <h1 class="text-center">Войти в личный кабинет</h1>
    <div class="myform">
        <form method="post" asp-action="Index">
            <div class="mb-3 mt-4">
                <input placeholder="Почта" name="email" id="email" type="email" class="form-control" aria-describedby="emailHelp">
            </div>

            <div class="mb-3">
                <input placeholder="Пароль" name="password" id="password"  type="password" class="form-control">
            </div>



            <button type="submit" class="btn btn-light mt-3">Войти</button>

            <p> Нет аккаунта? <a onclick="location.href='@Url.Action("Index","RegisterUser")'">Зарегистрироваться</a> </p>
        </form>
    </div>
</center>