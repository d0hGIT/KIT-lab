<Window x:Class="_1_LB_RPM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="1_LB_RPM" Height="450" Width="600">
    <Window.Resources>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="DarkGray"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="Gray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource ButtonStyle}">
            <Setter Property="IsEnabled" Value="False"/>
            <Style.Triggers>
                <MultiDataTrigger>
                    <MultiDataTrigger.Conditions>
                        <Condition Binding="{Binding Text, ElementName=TextBox1}" Value=""/>
                        <Condition Binding="{Binding Text, ElementName=TextBox2}" Value=""/>
                    </MultiDataTrigger.Conditions>
                    <Setter Property="IsEnabled" Value="True"/>
                </MultiDataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Arial"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="12"/>
            <!-- Устанавливаем шрифт, цвет и размер текста по умолчанию -->
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedItem.Content, ElementName=FontSelector}" Value="Arial">
                    <Setter Property="FontFamily" Value="Arial"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="FontSize" Value="12"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedItem.Content, ElementName=FontSelector}" Value="Courier New">
                    <Setter Property="FontFamily" Value="Courier New"/>
                    <Setter Property="Foreground" Value="Blue"/>
                    <Setter Property="FontSize" Value="14"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedItem.Content, ElementName=FontSelector}" Value="Times New Roman">
                    <Setter Property="FontFamily" Value="Times New Roman"/>
                    <Setter Property="Foreground" Value="Red"/>
                    <Setter Property="FontSize" Value="16"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding SelectedItem.Content, ElementName=FontSelector}" Value="Verdana">
                    <Setter Property="FontFamily" Value="Verdana"/>
                    <Setter Property="Foreground" Value="Green"/>
                    <Setter Property="FontSize" Value="50"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="10">
            <TextBox x:Name="TextBox1" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="150">
                <TextBox.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="LightBlue" Offset="0.0"/>
                        <GradientStop Color="LightGreen" Offset="1.0"/>
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>

            <TextBox x:Name="TextBox2" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Height="150" Margin="0,10,0,0">
                <TextBox.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="LightBlue" Offset="0.0"/>
                        <GradientStop Color="LightGreen" Offset="1.0"/>
                    </LinearGradientBrush>
                </TextBox.Background>
            </TextBox>

            <ComboBox x:Name="FontSelector" Margin="0,10,0,0">
                <ComboBoxItem Content="Arial"/>
                <ComboBoxItem Content="Courier New"/>
                <ComboBoxItem Content="Times New Roman"/>
                <ComboBoxItem Content="Verdana"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Открыть" Style="{StaticResource ButtonStyle}" />
            <Button Content="Очистить" Style="{StaticResource ButtonStyle}" Margin="10,0,0,0" />
            <Button Content="Закрыть" Style="{StaticResource ButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
