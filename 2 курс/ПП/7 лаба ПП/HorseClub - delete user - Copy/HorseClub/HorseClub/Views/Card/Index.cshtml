@{
    ViewData["Title"] = "Личный кабинет";
}
@model User

<center>
<div class="page-content page-container" id="page-content">
        <button onclick="location.href='@Url.Action("Index","Home")'" class="home-cta-btn button Anchor">Выйти</button>
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                  
                                    <h6 class="f-w-600"> @Model.USER_name </h6>
                                        <h6 class="f-w-600"> @Model.USER_surname </h6>

                                </div>


                                <p>   </p>
                                <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">   О пользователе </h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600"> Почта </p>
                                        <h6 class="text-muted f-w-400">   @Model.USER_email   </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">  Возраст  </p>
                                        <h6 class="text-muted f-w-400"> @Model.USER_age </h6>
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Projects</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">  </p>
                                        <h6 class="text-muted f-w-400">         </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600"> </p>
                                        <h6 class="text-muted f-w-400">    </h6>
                                    </div>
                                </div>
                                    <form asp-controller="Card" asp-action="DeleteUser" method="post">
                                         <button type="submit" class="home-cta-btn button Anchor" > Удалить профиль </button>
                                    </form>

                                    <form asp-controller="Card" asp-action="RedirectToUpdateUser" method="post">
                                        <button type="submit" class="home-cta-btn button Anchor"> Изменить профиль </button>
                                    </form>
                                    

                                    
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</center>