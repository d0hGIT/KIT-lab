<Window x:Class="HorseClubApp.Views.Edit.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HorseClubApp.Views.Edit"
        mc:Ignorable="d"
        Title="EditUserWindow" WindowStartupLocation="CenterScreen" WindowStyle="None" Background="Black" Width="784" Height="600" >
    <Window.Resources>
        <Style x:Key="BoldWhiteText" TargetType="TextBlock">

            <Setter Property="FontSize" Value="20" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>


        <Style x:Key="CustomButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="0,15,0,0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Black" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontFamily" Value="Consolas" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CustomTextBoxStyle" TargetType="TextBox">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,10,0,15"/>
        </Style>
        <Style x:Key="CustomDatePickerStyle" TargetType="DatePicker">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,10,0,15"/>
        </Style>
        <Style x:Key="CustomComboBoxStyle" TargetType="ComboBox">

            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="Margin" Value="0,10,0,15"/>
        </Style>




    </Window.Resources>


    <Grid>
        <StackPanel x:Name="MainSP" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel x:Name="sp1" Margin="0,10,20,10"  VerticalAlignment="Center">

                <TextBlock Text="Имя" Style="{StaticResource BoldWhiteText}" />
                <TextBox x:Name="breednameTextBox" Style="{StaticResource CustomTextBoxStyle}" Text="{Binding USER_name}" Width="200" />

                <TextBlock Text="Фамилия" Style="{StaticResource BoldWhiteText}" />
                <TextBox x:Name="breednamTextBox" Style="{StaticResource CustomTextBoxStyle}" Text="{Binding USER_surname}" Width="200" />

                <TextBlock Text="Возраст" Style="{StaticResource BoldWhiteText}" />
                <TextBox x:Name="breedmeTextBox" Style="{StaticResource CustomTextBoxStyle}" Text="{Binding USER_age}" Width="200"  PreviewTextInput="NumericTextBox_PreviewTextInput"/>

                <TextBlock Text="Почта" Style="{StaticResource BoldWhiteText}" />
                <TextBox x:Name="brenameTextBox" Style="{StaticResource CustomTextBoxStyle}" Text="{Binding USER_email}" Width="200" />

                <TextBlock Text="Login" Style="{StaticResource BoldWhiteText}" />
                <TextBox Style="{StaticResource CustomTextBoxStyle}" Text="{Binding USER_login}" Width="200" />


                <TextBlock Text="Телефон" Style="{StaticResource BoldWhiteText}" />
                <TextBox  Style="{StaticResource CustomTextBoxStyle}" Text="{Binding USER_phone}" Width="200" PreviewTextInput="PhoneNumberTextBox_PreviewTextInput"  />

                <TextBlock Text="Пароль" Style="{StaticResource BoldWhiteText}" />
                <TextBox x:Name="bnameTextBox" Style="{StaticResource CustomTextBoxStyle}" Text="{Binding USER_password}" Width="200"  />

                <TextBlock Text="Статус пользователя" Style="{StaticResource BoldWhiteText}" />
                <ComboBox x:Name="Status" Text="{Binding USER_status}" Style="{StaticResource CustomComboBoxStyle}" />

            </StackPanel>

            <StackPanel x:Name="ButtonsSP" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center">

                <Button x:Name="AddBtn"
        Content="Изменить" Style="{StaticResource CustomButtonStyle}" Click="AddBtn_Click"  />
                <Button x:Name="BackBtn"
Content="Закрыть" Style="{StaticResource CustomButtonStyle}" Click="BackBtn_Click"  />
            </StackPanel>
        </StackPanel>


    </Grid>
</Window>
