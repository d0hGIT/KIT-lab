<Window x:Class="_7_вариант_с_навбаром_фулл.MyRecordsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_7_вариант_с_навбаром_фулл"
        mc:Ignorable="d"
        Title="MyRecordsWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Horizontal">
                <Image Source="{Binding ImagePath}" Width="150" Height="150" />
                <TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
            </StackPanel>
            
        </ScrollViewer>
    </Grid>
</Window>
